<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chapter 4</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../style/main.css">
    <link rel="stylesheet" href="../style/sticky.css">

</head>

<body>
    <div class="row header">
        <div class="col-10 text-black-50">
            <h1>WELCOME
                {{#username}}
                    {{.}}
                    <a href="/member/logout" class="text-light text-end">Logout</a>
                {{/username}}
            </h1>
        </div>
    </div>
    <!-- Button trigger modal -->

    <div class="row aside" id="show-info">
        <div class="col-2" id="side-menu">
        </div>
        <div class="col-8">
            <div class="main-layout">
                <div class="col-11 main-layout text-center">
                    {{#results}}

                        <div class="card main-layout text-center" id="stick2" style="width: 40%;">
                            <img class="card-img-top" src="..." alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <div>

                                </div>

                                <h5 class="card-title">{{username}}</h5>
                                <div>
                                    <p class="card-text text-center">{{details}}</p>
                                    <p class="card-text text-buttom">{{dataID}}</p>
                                    <p class="card-text text-buttom stat">{{status}}</p>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#exampleModalLong">
                                                <i class="bi-pen"></i>
                                            </button>
                                        </div>
                                        <div class="col-md-4">
                                            <a href="#" class="btn btn-primary">Show full post</a>
                                        </div>
                                        <div class="col-md-4">
                                            <form action="/member/delete" method="post"
                                                onsubmit="return confirm('Are you sure you want to delete data ID: {{dataID}}?')">
                                                <input type="hidden" name="dataID" value="{{dataID}}" required>
                                                <button class="btn btn-danger" onclick="console.log('{{dataID}}')"
                                                    type="submit" class="btn btn-default btn-sm">
                                                    <i class="bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                    <!-- Modal -->
                                    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle">Edit data
                                                    </h5>
                                                    <button type="button" class="close btn btn-secondary"
                                                        data-bs-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/member/update" method="post">
                                                        <label for="details">Details:</label>
                                                        <input type="hidden" name="dataID" value="{{dataID}}" required>
                                                        <textarea name="details" id="details" class="form-control mb-3"
                                                            cols="50" rows="10">{{details}}</textarea>
                                                        <div class="form-group row">
                                                            <label for="status"
                                                                class="col-sm-2 col-form-label">Status:</label>
                                                            <div class="col-sm-10">
                                                                <select name="status" id="status" class="form-control">
                                                                    <option selected>Found</option>
                                                                    <option>Returned</option>
                                                                    <option>Lost</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <button onclick="console.log('{{dataID}}')" type="submit"
                                                            class="btn btn-primary">Save
                                                            changes</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/results}}

                    <a href="/member/add" id="posted-link">
                        <div class="card main-layout text-center" id="stick1" style="width: 40%;">

                            <div class="card-body">
                                <h5 class="card-title">+</h5>
                                <div>
                                    <p class="card-text text-center"></p>
                                    <p class="card-text text-buttom">ADD</p>
                                </div>
                            </div>
                        </div>
                    </a>
                    <!--<button class="adder" onclick="window.location.href='/member/add';">
                        Add info
                    </button>-->
                </div>
            </div>
        </div>
        {{! <button class="adder">
            <div> + </div>
        </button> }}

    </div>
    <script src="../style/stycky.js"></script>
    {{! <script> 
        var aTags = document.getElementsByTagName("p")
        var searchText = 'Found'
        var found

        for (var i = 0; i < aTags.length; i++) {
            if (aTags[i].textContent == searchText) {
                found = aTags[i];
                break;
            }
        }
        console.log(found)
        var text = found.innerText
        console.log(text)
    </script> }}
</body>

</html>