<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin page</title>
    <link rel="stylesheet" href="../style/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../style/admin.css">
    <link rel="stylesheet" href="../style/sticky.css">

</head>

<body>
<div class="col">
    <div class="row header" style="background-color: #8d38c9; height:150px;">
        <div class="col-2">
            <a href="/member/main"><img class="logo" src="../img/nerv.png"></a>
        </div>
        <div class="col-10">
            <h1>UP LOST AND FOUND</h1>
        </div>
    </div>
    <div class="row">
        <nav class="navbar navbar-light " style="background-color: #eba800;">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#side-menu"
                    aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <input class="form-control me-2" type="text" id="myInput" onkeyup="myFunction()" placeholder="Search"
                    style="width:20em; border-radius: 40px;">
            </div>
        </nav>
    </div>
    <!-- <button class="btn btn-danger" data-bs-toggle="offcanvas" data-bs-target="#side-menu"><i class="bi bi-list"></i></button> -->
    <div class="row">
        <div class="offcanvas offcanvas-menu offcanvas-start" tabindex="-1" id="side-menu" aria-labelledby="side-menu">
            <div class="offcanvas-header">

                <div class="row">
                    <div class="col-md-6">
                        <a href="/member/member"><img style="border-radius:50%;" id="user-image"
                                src="/{{#admin}}{{userImage}}{{/admin}}" alt="profile"></a>
                    </div>
                    <div class="col-md-6 text-black-50 text-end">
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                    <h3 style="margin: 10px;">{{#admin}}{{username}}{{/admin}}</h3>
                </div>
            </div>
            <div class="offcanvas-body">
                <button class="menu-button btn btn-danger" onclick="window.location.href='/member/member'">Your
                    Account</button>
                <button class="menu-button btn btn-danger" href="#">Another action</button>
                <button class="menu-button btn btn-danger" onclick="window.location.href='/member/logout'">Log out</button>
            </div>
        </div>
    </div>
    <div class="row aside" id="show-info">
        <div class="col-12">
            <div class="main-layout">
                <div class="col-11 main-layout text-center">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>userprofile</th>
                                <th>ID</th>
                                <th>username</th>
                                <th>email</th>
                                <th>studentID</th>
                                <th>fristname</th>
                                <th>lastname</th>
                                <th>faculty</th>
                                <th>major</th>
                                <th>phone number</th>
                                <th>facebook</th>
                                <th>instagram</th>
                                <th>x</th>
                                <th>edit</th>
                                <th>delete</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            {{#results}}
                                <tr id="userData">
                                    <td><img src="/{{userImage}}" class="user-image"></td>
                                    <td class="userid">{{userID}}</td>
                                    <td class="username">{{username}}</td>
                                    <td class="email">{{email}}</td>
                                    <td class="studentid">{{studentID}}</td>
                                    <td class="firstname">{{firstname}}</td>
                                    <td class="lastname">{{lastname}}</td>
                                    <td class="faculty">{{faculty}}</td>
                                    <td class="major">{{major}}</td>
                                    <td class="phonenumber">{{phonenumber}}</td>
                                    <td class="fb">{{facebook}}</td>
                                    <td class="ig">{{instagram}}</td>
                                    <td class="x">{{x}}</td>
                                    <td>
                                        <form action="/member/editUser" method="post">
                                            <input type="hidden" name="username" value="{{username}}" required>
                                            <input type="hidden" name="userID" value="{{userID}}" required>
                                            <button type="submit" class="btn btn-primary">
                                                Edit <i class="bi bi-pen"></i>
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/member/deleteUser" method="post"
                                            onsubmit="return confirm('Are you sure you want to delete?');">
                                            <input type="hidden" name="userID" value="{{userID}}" required>
                                            <button type="submit" class="btn btn-danger">
                                                Delete <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>

                                </tr>
                            {{/results}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    
    <script>

        function myFunction() {
            
            var input, filter, tableSearch, tableData, a, i, userID,username,email,studentID,firstname,lastname,faculty,major,phonenumber,fb,ig,x;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();

            console.log(input.value)

            tableSearch = document.querySelectorAll("#userData");
            //tableData = tableSearch.getElementsByTagName("td");

            
            classID = document.getElementsByClassName('userid') 
            classUsername = document.getElementsByClassName('username')
            classEmail = document.getElementsByClassName('email')
            classFirstname = document.getElementsByClassName('firstname')
            classLastname = document.getElementsByClassName('lastname')
            classStudentID = document.getElementsByClassName('studentid')
            classFaculty = document.getElementsByClassName('faculty')
            classMajor = document.getElementsByClassName('major')
            classPhonenumber = document.getElementsByClassName('phonenumber')
            classFacebook = document.getElementsByClassName('fb')
            classInsatagram = document.getElementsByClassName('ig')
            classX = document.getElementsByClassName('x')
            //console.log(classUsername[0].innerText)
            //console.log(username = classUsername[0].innerText)

            i=0
            tableSearch.forEach(element => {
                userID = classID[i].innerText
                username = classUsername[i].innerText
                email = classEmail[i].innerText
                studentID = classStudentID[i].innerText
                firstname = classFirstname[i].innerText
                lastname = classLastname[i].innerText
                faculty = classFaculty[i].innerText
                major = classMajor[i].innerText
                phonenumber = classPhonenumber[i].innerText
                fb = classFacebook[i].innerText
                ig = classInsatagram[i].innerText
                x = classX[i].innerText

                if((userID.toUpperCase().indexOf(filter) > -1)||(username.toUpperCase().indexOf(filter) > -1)||
                (email.toUpperCase().indexOf(filter) > -1)|| (studentID.toUpperCase().indexOf(filter) > -1)||
                (firstname.toUpperCase().indexOf(filter) > -1)|| (lastname.toUpperCase().indexOf(filter) > -1)||
                (faculty.toUpperCase().indexOf(filter) > -1)|| (major.toUpperCase().indexOf(filter) > -1)||
                (phonenumber.toUpperCase().indexOf(filter) > -1)|| (fb.toUpperCase().indexOf(filter) > -1)||
                (ig.toUpperCase().indexOf(filter) > -1)|| (x.toUpperCase().indexOf(filter) > -1))
                    tableSearch[i].style.display = ""
                else
                    tableSearch[i].style.display = "none"
                i++
            })
            
        }

        
    </script>
</body>

</html>